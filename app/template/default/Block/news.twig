<div id="infoPc">
    <div id="info">
        <div class="sideBar_tit garamond">
            <p>INFORMATION</p>
        </div>
        <div class="accordion">
            <div class="newslist">

                {% for News in NewsList %}
                <dl class="sideBar_list2">
                    <dt>
                        <span>
                            {{ News.title }}
                        </span>
                        {% if News.comment or News.url %}
                        <span class="angle-circle"><svg class="cb cb-angle-down"><use xlink:href="#cb-angle-down" /></svg></span>
                        {% endif %}
                    </dt>
                    {% if News.comment or News.url %}
                    <dd>{{ News.comment|raw|nl2br}}
                        {% if News.url %}<br>
                        <a href="{{ News.url }}" {% if News.link_method == '1' %}target="_blank"{% endif %}>
                        詳しくはこちら
                        </a>{% endif %}
                    </dd>
                    {% endif %}
                </dl>
                {% endfor %}

            </div>
        </div>
    </div>
</div>