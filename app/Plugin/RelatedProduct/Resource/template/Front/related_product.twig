<div class="item_gallery onShop_cont1">
    <p class="mb-20">関連商品</p>
    <ul class="onShop_cont1_boxes top_cont1_cont alpha">
        {% for RelatedProduct in RelatedProducts %}
            <li>
                <a href="{{ url('product_detail', {id : RelatedProduct.ChildProduct.id}) }}" class="item_photo">
                    <img src="{{ app.config.image_save_urlpath }}/{{ RelatedProduct.ChildProduct.main_list_image|no_image_product }}">
                    <span class="productNameThumb">{{RelatedProduct.ChildProduct.name}}</span>
                    <br />{{RelatedProduct.ChildProduct.getPrice02IncTaxMin|price }}
                </a>
                <p>{{ RelatedProduct.content }}</p>
            </li>
        {% endfor %}
    </ul>
</div>
